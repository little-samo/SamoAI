model AgentModel {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  name String
  meta Json   @default("{}")

  ownerUserModel UserModel? @relation("agentOwnerUser", fields: [ownerUserId], references: [id])
  ownerUserId    Int?       @map("owner_user_id")

  telegramUsername String? @unique
  telegramBotToken String? @unique

  isActive Boolean @default(true)

  @@index([ownerUserId])
}

model LlmApiKeyModel {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  userModel   UserModel? @relation("userLlmApiKey", fields: [userModelId], references: [id])
  userModelId Int?       @map("user_model_id")

  platform LlmPlatform
  key      String

  @@unique([userModelId, platform])
}

enum LlmPlatform {
  ANTHROPIC
  OPENAI
}

model LocationModel {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  name String @unique
  meta Json   @default("{}")
}

