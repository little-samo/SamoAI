{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "clearMocks": true,
  "collectCoverage": true,
  "coverageDirectory": "./coverage",
  "coverageProvider": "v8",
  "verbose": true,
  "testTimeout": 10000
}
