model LocationModel {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  platform UserPlatform @default(API)
  type     LocationType @default(PRIVATE)

  name String
  meta Json   @default("{}")

  @@index([name])
}

enum LocationType {
  PRIVATE
  GROUP
}
